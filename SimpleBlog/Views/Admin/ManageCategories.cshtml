@model SimpleBlog.Models.Admin.AdminCategoriesList

@{
    ViewBag.Title = "Manage categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Manage categories</h1>

@Html.ActionLink("Create New", "CreateCategory", null, new { @class = "create-new-link"})
<table id="admin-table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Url slug
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Categories) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrlSlug)
        </td>
        <td>

            @Html.ActionLink("Edit", "EditCategory", new { id = item.CategoryId }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryId })
        </td>
    </tr>
}

</table>